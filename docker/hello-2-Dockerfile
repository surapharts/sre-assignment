FROM node:buster-slim

LABEL description="LINE SRE Assignment"

ENV TZ=Asia/Bangkok

ARG USER=appuser
ARG UID=1001
ARG GROUP=appgroup
ARG GID=1001

RUN addgroup --gid ${GID} ${GROUP} && \
    adduser --home /app \
    --uid ${UID} \
    --gecos "application user" \
    --gid ${GID} \
    --disabled-password \
    ${USER}

WORKDIR /app

COPY --chown=appuser:appgroup app/hello-2.js .

RUN apt-get update && \
    apt-get upgrade -y && \
    apt-get install -y tini && \
    rm -rf /var/lib/apt/lists/* && \
    npm install express

USER appuser

ENTRYPOINT [ "tini", "-sg", "--", "node", "hello-2.js" ]
